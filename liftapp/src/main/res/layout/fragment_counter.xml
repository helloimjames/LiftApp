<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.liftapp.Counter$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtCounterReps"
        android:layout_gravity="center"
        android:textSize="70dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:text="Up"
        android:id="@+id/btnUp"
        android:layout_gravity="center_horizontal|top"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <MediaController
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mediaController"
        android:layout_gravity="right|bottom" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:text="New Text"
        android:id="@+id/tvHistory"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/mediaController" />

    <TextView
        android:layout_width="97dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reps"
        android:id="@+id/textView"
        android:layout_gravity="left|center_vertical"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sets"
        android:id="@+id/textView2"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/txtCounterReps"
        android:layout_marginLeft="53dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/txtCounterSets"
        android:textSize="70dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/btnUp"
        android:layout_alignEnd="@+id/btnUp" />

</RelativeLayout>


